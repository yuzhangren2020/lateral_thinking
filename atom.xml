    <id>https://yuzhangren2020.github.io/lateral_thinking/wiki/Clunhouse/%E3%82%A2%E3%82%B8%E3%82%A2%E3%83%BB%E5%A4%AA%E5%B9%B3%E6%B4%8B%E5%9C%B0%E5%9F%9F%E3%81%AB%E3%81%8A%E3%81%91%E3%82%8B%E5%B9%B3%E5%92%8C%E3%81%A8%E6%97%A5%E6%9C%AC%E3%81%AE%E6%9E%A0%E5%89%B2%E3%82%92%E5%9B%BD%E5%86%85%E5%A4%96%E3%81%AE%E5%A0%B1%E9%81%93%E3%81%8B%E3%82%89/2021%E5%B9%B410%E6%9C%8820%E6%97%A5%EF%BC%88%E6%B0%B4%EF%BC%89/</id>
